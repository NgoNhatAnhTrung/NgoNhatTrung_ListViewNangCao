<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:textColor="#ff00"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:id="@+id/textviewTen"
        android:text="Tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Mô tả"
        android:textColor="#0040FF"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewTen"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:id="@+id/textviewMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cong"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:background="@drawable/boder"
        android:padding="3dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tru"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@+id/imageviewHinh"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:background="@drawable/boder"
        android:text="-"
        android:padding="3dp"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageviewHinh"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="6$"
        android:textColor="#3F51B5"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>